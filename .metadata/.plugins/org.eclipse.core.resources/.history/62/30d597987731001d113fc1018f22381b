	EntityManager em = JPAUtil.getEntityManager();
	QuestaoDao questaoDao = new QuestaoDao(em);
	
	public void ativar(Questao q) {
		

		em.getTransaction().begin();
		q = em.merge(q);
		q.setAtiva(true);
		em.getTransaction().commit();

	}

